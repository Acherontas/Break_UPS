int praxeis(int iprotos,int ideuteros,int itritos,
            long double mpr,long double mdt,long double mtrt,
            long double fdkpr,long double fdkdt,long double ftrt,
            int st,long double tmp_up)
{
        long double pros;
        long double afair;
        long double fract,intpt;
        long double xst;
        if(st==0){
            pros=ftrt+fdkdt;
            fract=modf(pros,&intpt);
        }
        if(st==1 && fdkdt==0 && ftrt!=0){
            pros=1-(abs(ftrt));
            fract=modf(pros,&intpt);
        }
       cout<<std::setprecision(8)<<mpr << " :: " <<std::setprecision(8)<< iprotos << " " <<std::setprecision(8)<< fdkpr <<" || ";
       cout<<std::setprecision(8)<<mdt << " :: " <<std::setprecision(8)<< ideuteros << " " <<std::setprecision(8)<< fdkdt <<" || ";
       cout<<std::setprecision(8)<<mtrt << " :: "<<std::setprecision(8)<< itritos << " " <<std::setprecision(8)<< ftrt <<"\n";
       if(st==0){
                cout<<"@state " << st << " ------------> " <<std::setprecision(8)<< pros << " ::== "<<std::setprecision(8)<< ftrt << " + " <<std::setprecision(8)<< fdkdt <<"\n";
       }
       if(st==1 && fdkdt==0 && ftrt!=0){
                cout<<"@state " << st << " ------------> " <<std::setprecision(8)<< pros << " ::== " << 1 << " " <<std::setprecision(8)<< ftrt <<"\n";
       }
       if(tmp_up!=0 && fdkpr!=0){
                xst=abs(fdkpr)+abs(tmp_up);
                fract=modf(xst,&intpt);
       cout<<std::setprecision(8)<<xst << " ::== " <<std::setprecision(8)<< fdkpr << " + " <<std::setprecision(8)<< abs(tmp_up) << "\n";
       cout<<std::setprecision(8)<<xst << " ::== " <<std::setprecision(8)<< intpt << " " <<std::setprecision(8)<< fract <<"\n";
       }
       cout<<"\n";
       return 0;
}



